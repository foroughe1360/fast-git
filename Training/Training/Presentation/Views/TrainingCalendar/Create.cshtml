@model InterfaceEntity.TrainingCalendarEntity

@{
    List<SelectListItem> listIday = new List<SelectListItem>();
    listIday.Add(new SelectListItem
    {
        Text = "شنبه",
        Value = "1",
    });
    listIday.Add(new SelectListItem
    {
        Text = "یکشنبه",
        Value = "2"
    });
    listIday.Add(new SelectListItem
    {
        Text = "دوشنبه",
        Value = "3"
    });
    listIday.Add(new SelectListItem
    {
        Text = "سه شنبه",
        Value = "4"
    });
    listIday.Add(new SelectListItem
    {
        Text = "چهارشنبه",
        Value = "5"
    });
    listIday.Add(new SelectListItem
    {
        Text = "پنج شنبه",
        Value = "6"
    });
    listIday.Add(new SelectListItem
    {
        Text = "جمعه",
        Value = "7"
    });
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript">
        new AMIB.persianCalendar('TrainingCalendarDatestr');
    </script>
</head>

<body>

    <!-- #section:basics/content.breadcrumbs -->
    <div class="breadcrumbs" style="display:none" id="MessageOperation">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-check"></i>
                <a href="#" id="messageOp"></a>
            </li>
        </ul>
        <!-- /.breadcrumb -->
    </div>

    <!-- /section:basics/content.breadcrumbs -->
    <div class="page-content">
        <!-- /section:settings.box -->
        <div class="page-content-area">
            <br />
            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <form class="form-horizontal" role="form">
                        <!-- #section:elements.form -->
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">نام دوره : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.CourseName, new { @id = "CourseName", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "نام دوره" })
                                @Html.ValidationMessageFor(model => model.CourseName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">نام استاد : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("TeacherId", new MultiSelectList(ViewBag.TeacherId, "Value", "Text"), "-- نام استاد را انتخاب نمائید --", new { @id = "TeacherId", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.TeacherId)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">سطح شرکت کنندگان : </label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Participantlevel, 5, 50, new { @id = "Participantlevel", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "سطح شرکت کنندگان" })
                                @Html.ValidationMessageFor(model => model.Participantlevel)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">روز : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("TrainingCalendarDay", listIday, "--روز را انتخاب نمائید --", new { @id = "TrainingCalendarDay", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.TrainingCalendarDay)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">تاریخ : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.TrainingCalendarDate, new { @id = "TrainingCalendarDatestr", @class = "col-xs-10 col-sm-5 col-md-10 fs pdate align-right", @placeholder = "تاریخ" })
                                @Html.ValidationMessageFor(model => model.TrainingCalendarDate)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">نوع آموزش: </label>
                            <div class="col-md-9">
                                @Html.DropDownList("TableInterfaceValueIdTypeTrainingCalendarDateId", new MultiSelectList(ViewBag.TableInterfaceValueIdTypeTrainingCalendarDateId, "Value", "Text"), "-- نوع آموزش را انتخاب نمائید --", new { @id = "TableTypeTrainingCalendarDateId", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.TableTypeTrainingCalendarDateId)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">توضیحات : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Description, new { @id = "Description", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "توضیحات" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>

                        <div class="breadcrumbs" id="breadcrumbs">
                            <div class="col-md-offset-3">
                                <button id="btnSave" onclick="SaveData()" class="btn btn-success btn-white btn-round" type="button">
                                    <i class="ace-icon fa fa-floppy-o bigger-125"></i>
                                    ذخیره
                                </button>
                                &nbsp; &nbsp; &nbsp;
                                <button type="button" class="btn btn-danger btn-white btn-round" data-dismiss="modal" aria-label="Close">
                                    <i class="ace-icon fa fa-undo bigger-125"></i>
                                    بازگشت
                                </button>
                                <img class="col-md-offset-1" style="display:none" id="ajaxloader" src="~/AceTemplate/assets/img/ajax-loader2.gif" />
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.page-content-area -->
    </div>
    <!-- /.page-content -->

</body>

</html>



