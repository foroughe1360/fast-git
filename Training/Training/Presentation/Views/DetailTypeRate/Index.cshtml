        //-------------------------------------------------

        $(document).ready(function () {

            $("#btnAddNew").click(function () {
                $.get('/DetailTypeRate/Create', null, function (data) {
                    $("#TitleModal").empty();
                    $("#TitleModal").append("<span>فرم ثبت جزئیات انواع امتیازها</span>");
                    $("#MainModalContent").html(data);
                    $("#AddNewModal").modal("show");
                })

            });

            $(".BtnEdit").click(function () {

                var DetailTypeRateld = $(this).attr('data-Id');
                $.get('/DetailTypeRate/Edit', "ID=" + DetailTypeRateld, function (data) {
                    $("#TitleModal").empty();
                    $("#TitleModal").append("<span>فرم ویرایش جزئیات انواع امتیازها</span>");
                    $("#MainModalContent").html(data);
                    $("#AddNewModal").modal("show");
                });
            });

            $(".BtnDelete").click(function () {

                var DetailTypeRateld = $(this).attr('data-Id');
                var ViewName = $(this).attr('data-DeleteName');
                $.get('/Home/DeletePage', { id: DetailTypeRateld, viewname: ViewName }, function (data) {
                    $("#TitleModal").empty();
                    $("#TitleModal").append("<span>فرم حذف جزئیات انواع امتیازها</span>");
                    $("#MainModalContent").html(data);
                    $("#AddNewModal").modal("show");
                });

            });

            $(".BtnPoint").click(function () {
                var Tariffld = $(this).attr('data-Id');
                $.get('/Point/Index', "ID=" + Tariffld, function (data) {
                    $("#TitleModal").empty();
                    $("#TitleModal").append("<span>فرم (جزئیات انواع امتیازها)</span>");
                    $("#MainModalContent").html(data);
                    $("#AddNewModal").modal("show");
                });
            });

        });
