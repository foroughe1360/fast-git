@using Bussiness
@model IEnumerable<InterfaceEntity.OfferTrainingForJobEntity>
<table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center">
                <label class="position-relative">
                    #
                </label>
            </th>
            <th>نام واحد </th>
            <th>نام بخش </th>
            <th>نام قسمت </th>
            <th>عنوان شغل</th>
            <th>تاریخ نیازسنجی</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody id="contacts">
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td class="center">
                        <label class="position-relative">
                            @i
                        </label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitSCenterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SectionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostGroupName)
                    </td>
                    <td>
                        @item.DateNeeds.MiladiToPersion()
                    </td>
                    <td>
                        <div class="hidden-sm hidden-xs btn-group">
                            <button data-original-title="ویرایش" data-placement="top" data-toggle="tooltip" data-Id="@item.OfferTrainingForJobId" class="BtnEdit btn btn-xs btn-warning tooltip1">
                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                            </button>
                            <button data-original-title="حذف" data-placement="top" data-toggle="tooltip" data-Id="@item.OfferTrainingForJobId" data-DeleteName="DeleteDataOfferTrainingForJob()" class="BtnDelete btn btn-xs btn-danger tooltip1">
                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                            </button>
                            <button data-original-title="جزئیات" data-placement="top" data-toggle="tooltip" data-Id="@item.OfferTrainingForJobId" class="BtnDetailOfferTrainingForJob btn btn-xs btn-info tooltip1">
                                <i class="ace-icon fa fa-list bigger-120"></i>
                            </button>
                            <a href="/OfferTrainingForJob/Print/@item.OfferTrainingForJobId" data-original-title="پرینت فهرست آموزشهای پیشنهاد شده برای مشاغل" data-placement="top" data-toggle="tooltip" data-Id="@item.OfferTrainingForJobDateId" class="BtnDelete btn btn-xs btn-success tooltip1">
                                <i class="ace-icon fa fa-print bigger-120"></i>
                            </a>
                        </div>

                        <div class="hidden-md hidden-lg">
                            <div class="inline position-relative">
                                <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                    <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                </button>

                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                                    <li>
                                        <a data-Id="@item.OfferTrainingForJobId" class="BtnEdit tooltip-success" data-rel="tooltip" title="ویرایش">
                                            <span class="green">
                                                <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>

                                    <li>
                                        <a data-Id="@item.OfferTrainingForJobId" class="BtnDelete tooltip-error" data-rel="tooltip" title="حدف">
                                            <span class="red">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>