@model InterfaceEntity.RatingEvaluationEntity
<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <script>
        new AMIB.persianCalendar('RatingEvaluationDateStr');
    </script>
</head>

<body>

    <!-- #section:basics/content.breadcrumbs -->
    <div class="breadcrumbs" style="display:none" id="MessageOperation">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-check"></i>
                <a href="#" id="messageOp"></a>
            </li>
        </ul>
        <!-- /.breadcrumb -->
    </div>

    <!-- /section:basics/content.breadcrumbs -->
    <div class="page-content">
        <!-- /section:settings.box -->
        <div class="page-content-area">
            <br />
            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <form class="form-horizontal" role="form">
                        <!-- #section:elements.form -->
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">عنوان امتیاز ارزشیابی : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("RatingEvaluationCoursesID", new MultiSelectList(ViewBag.TableInterfaceValueIdRatingEvaluationCourses, "Value", "Text"), "-- عنوان امتیاز را انتخاب نمائید --", new { @id = "RatingEvaluationCoursesID", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">امتیاز : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Number, new { @id = "Number", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "امتیاز" })
                                @Html.ValidationMessageFor(model => model.Number)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">تاریخ ثبت امتیاز : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.RatingEvaluationDate, new { @id = "RatingEvaluationDateStr", @class = "col-xs-10 col-sm-5 col-md-10 fs  pdate align-right", @placeholder = "تاریخ ثبت امتیاز" })
                                @Html.ValidationMessageFor(model => model.RatingEvaluationDate)
                            </div>
                        </div>

                        <div class="breadcrumbs" id="breadcrumbs">
                            <div class="col-md-offset-3">
                                <button id="btnSave" onclick="SaveData()" class="btn btn-success btn-white btn-round" type="button">
                                    <i class="ace-icon fa fa-floppy-o bigger-125"></i>
                                    ذخیره
                                </button>
                                &nbsp; &nbsp; &nbsp;
                                <button type="button" class="btn btn-danger btn-white btn-round" data-dismiss="modal" aria-label="Close">
                                    <i class="ace-icon fa fa-undo bigger-125"></i>
                                    بازگشت
                                </button>
                                <img class="col-md-offset-1" style="display:none" id="ajaxloader" src="~/AceTemplate/assets/img/ajax-loader2.gif" />
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.page-content-area -->
    </div>
    <!-- /.page-content -->

</body>

</html>



