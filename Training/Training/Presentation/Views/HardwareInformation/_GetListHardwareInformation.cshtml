@using Bussiness
@model IEnumerable<InterfaceEntity.HardwareInformationEntity>

<table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center">
                <label class="position-relative">
                    #
                </label>
            </th>
            <th>نام کاربر</th>
            <th>نام تجهیز</th>
            <th>مدل تجهیز</th>
            <th>کد اموال</th>
            <th>تاریخ تحویل</th>
            <th>NetworkIP</th>
            <th>NetworkID</th>
            <th>توضیحات</th>
            <th>وضعیت</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody id="contacts">
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td class="center">
                        <label class="position-relative">
                            @i
                        </label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployemeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EquipmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EquipmentModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PropertyNumber)
                    </td>
                    <td>
                        @item.DeliveryDate.MiladiToPersion()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NetworkIP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NetworkID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descriptions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        <div class="hidden-sm hidden-xs btn-group">
                            <button data-Id="@item.HardwareInformationId" data-original-title="ویرایش" data-placement="top" data-toggle="tooltip" class="BtnEdit btn btn-xs btn-warning tooltip1">
                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                            </button>

                            <button data-Id="@item.HardwareInformationId" data-DeleteName="DeleteDataHardwareInformation()" data-original-title="حذف" data-placement="top" data-toggle="tooltip" class="BtnDelete btn btn-xs btn-danger tooltip1">
                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                            </button>

                            @*<a href="/HardwareInformation/Print/@item.HardwareInformationId" data-original-title="چاپ فهرست آموزشهای پیشنهاد شده برای کارکنان" data-placement="top" data-toggle="tooltip" data-Id="@item.HardwareInformationId" class="BtnDelete btn btn-xs btn-success tooltip1">
                                <i class="ace-icon fa fa-print bigger-120"></i>
                            </a>*@

                        </div>

                        <div class="hidden-md hidden-lg">
                            <div class="inline position-relative">
                                <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                    <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                </button>

                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                                    <li>
                                        <a data-Id="@item.HardwareInformationId" class="BtnEdit tooltip-success" data-rel="tooltip" title="ویرایش">
                                            <span class="green">
                                                <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>

                                    <li>
                                        <a data-Id="@item.HardwareInformationId" class="BtnDelete tooltip-error" data-rel="tooltip" title="حدف">
                                            <span class="red">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </td>
                </tr>
                i++;
            }
        }
</table>

