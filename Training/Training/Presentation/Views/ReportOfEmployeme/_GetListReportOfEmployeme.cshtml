<table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center">
                <label class="position-relative">
                    #
                </label>
            </th>
            <th>نام</th>
            <th>نام خانوادگی</th>
            <th>نام پدر</th>
            <th>محل تولد</th>
            <th>تاریخ تولد</th>
            <th>شماره شناسنامه</th>
            <th>تاریخ استخدام</th>
            <th>تحصیلات</th>
            <th>رشته تحصیلی</th>
            <th>گرایش تحصیلی</th>
