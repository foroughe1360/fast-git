@using Bussiness
@model IEnumerable<InterfaceEntity.OfferTrainingForEmployemeEntity>

<table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center">
                <label class="position-relative">
                    #
                </label>
            </th>
            <th>نام واحد </th>
            <th>نام بخش </th>
            <th>نام قسمت </th>
            <th>عنوان شغل</th>
            <th>نام کارمند</th>
            <th>تاریخ نیازسنجی</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody id="contacts">
        @{
            int i = 1;
            //int i = ViewBag.NumOfPage;
            foreach (var item in Model)
            {
                <tr>
                    <td class="center">
                        <label class="position-relative">
                            @i
                        </label>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitSCenterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SectionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostGroupName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmployemeName)
                    </td>
                    <td>
                        @item.DateNeeds.MiladiToPersion()
                    </td>
                    <td>
                        <div class="hidden-sm hidden-xs btn-group">
                            <button data-original-title="ویرایش" data-placement="top" data-toggle="tooltip" data-Id="@item.OfferTrainingForEmployemeId" class="BtnEdit btn btn-xs btn-warning tooltip1">
                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                            </button>
                            <button data-original-title="حذف" data-placement="top" data-toggle="tooltip" data-Id="@item.OfferTrainingForEmployemeId" data-DeleteName="DeleteDataOfferTrainingForEmployeme()" class="BtnDelete btn btn-xs btn-danger tooltip1">
                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                            </button>
                            <button data-original-title="جزئیات" data-placement="top" data-toggle="tooltip" data-EmployemeName="@item.EmployemeName" data-Id="@item.OfferTrainingForEmployemeId" class="BtnDetailOfferTrainingForEmployeme btn btn-xs btn-info tooltip1">
                                <i class="ace-icon fa fa-list bigger-120"></i>
                            </button>

                            <button data-original-title="تنظیم تاریخ" data-placement="top" data-toggle="tooltip"
                                    data-Id="@item.OfferTrainingForEmployemeId"
                                    data-EmployemeId="@item.EmployemeId"
                                    data-EmployemeName="@item.EmployemeName"
                                    class="BtnSetDateReport btn btn-xs btn-round tooltip1">
                                <i class="ace-icon fa fa-list bigger-100"></i>
                            </button>
                            <a href="/OfferTrainingForEmployeme/Print/@item.OfferTrainingForEmployemeId" data-original-title="چاپ فهرست آموزشهای پیشنهاد شده برای کارکنان" data-placement="top" data-toggle="tooltip" data-Id="@item.OfferTrainingForEmployeeDateId" class="BtnDelete btn btn-xs btn-success tooltip1">
                                <i class="ace-icon fa fa-print bigger-120"></i>
                            </a>
                        </div>

                        <div class="hidden-md hidden-lg">
                            <div class="inline position-relative">
                                <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                    <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                </button>

                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                                    <li>
                                        <a data-Id="@item.OfferTrainingForEmployemeId" class="BtnEdit tooltip-success" data-rel="tooltip" title="ویرایش">
                                            <span class="green">
                                                <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>

                                    <li>
                                        <a data-Id="@item.OfferTrainingForEmployemeId" class="BtnDelete tooltip-error" data-rel="tooltip" title="حدف">
                                            <span class="red">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

