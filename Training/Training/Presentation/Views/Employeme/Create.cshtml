@model InterfaceEntity.EmployemeEntity

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "فعال",
        Value = "True",
        //Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "غیرفعال",
        Value = "False"
    });
}
<!DOCTYPE html>
<html>

<head>

    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript">
        new AMIB.persianCalendar('BirthDateStr');
        new AMIB.persianCalendar('DateOfEmployementStr');
    </script>

</head>

<body>
    <!-- #section:basics/content.breadcrumbs -->
    <div class="breadcrumbs" style="display:none" id="MessageOperation">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-check"></i>
                <a href="#" id="messageOp"></a>
            </li>
        </ul>
        <!-- /.breadcrumb -->
    </div>

    <!-- /section:basics/content.breadcrumbs -->
    <div class="page-content">
        <!-- /section:settings.box -->
        <div class="page-content-area">
            <br />

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <form class="form-horizontal" role="form">
                        <!-- #section:elements.form -->

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">کد پرسنلی: </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.PersonnelCode, new { @id = "PersonnelCode", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "کد پرسنلی" })
                                @Html.ValidationMessageFor(model => model.PersonnelCode)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">نام: </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.FirstName, new { @id = "FirstName", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "نام کاربر" })
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">نام خانوادگی : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.LastName, new { @id = "LastName", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "نام خانوادگی" })
                                @Html.ValidationMessageFor(model => model.LastName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">نام پدر : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.FatherName, new { @id = "FatherName", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "نام پدر" })
                                @Html.ValidationMessageFor(model => model.FatherName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">محل تولد : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.PlaceOfBirth, new { @id = "PlaceOfBirth", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "محل تولد" })
                                @Html.ValidationMessageFor(model => model.PlaceOfBirth)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">تاریخ تولد : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.BirthDate, new { @id = "BirthDateStr", @class = "col-xs-10 col-sm-5 col-md-10 fs pdate align-right", @placeholder = "تاریخ تولد" })
                                @Html.ValidationMessageFor(model => model.BirthDate)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">شماره شناسنامه : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.IDNumber, new { @id = "IDNumber", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "شماره شناسنامه" })
                                @Html.ValidationMessageFor(model => model.IDNumber)
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">شماره ملی : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.NationalCode, new { @id = "NationalCode", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "شماره ملی" })
                                @Html.ValidationMessageFor(model => model.NationalCode)
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">تاریخ استخدام : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.DateOfEmployement, new { @id = "DateOfEmployementStr", @class = "col-xs-10 col-sm-5 col-md-10 fs pdate align-right", @placeholder = "تاریخ استخدام" })
                                @Html.ValidationMessageFor(model => model.DateOfEmployement)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">وضعیت شغلی : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("State", listItems, "-- وضعیت شغلی را انتخاب نمائید --", new { @id = "State", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.State)
                            </div>
                        </div>

                        <div class="breadcrumbs" id="breadcrumbs">
                            <div class="col-md-offset-3">
                                <button id="btnSave" onclick="SaveDataEmployeme()" class="btn btn-success btn-white btn-round" type="button">
                                    <i class="ace-icon fa fa-floppy-o bigger-125"></i>
                                    ذخیره
                                </button>
                                &nbsp; &nbsp; &nbsp;
                                <button type="button" class="btn btn-danger btn-white btn-round" data-dismiss="modal" aria-label="Close">
                                    <i class="ace-icon fa fa-undo bigger-125"></i>

                                    بازگشت
                                </button>
                                <img class="col-md-offset-1" style="display:none" id="ajaxloader" src="~/AceTemplate/assets/img/ajax-loader2.gif" />
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.page-content-area -->
    </div>
    <!-- /.page-content -->

</body>

</html>

