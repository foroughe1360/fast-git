    </style>
</head>


<table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center">
                <label class="position-relative">
                    #
                </label>
            </th>
            <th> پرسنل نام</th>
            <th>نام خانوادگی پرسنل</th>
            <th>نام پدر</th>
            <th> پرسنل محل تولد</th>
            <th>تاریخ تولد</th>
            <th>شماره شناسنامه</th>
            <th>کد ملی</th>
            <th>تاریخ استخدام</th>
            <th>عملیات</th>
        </tr>
    </thead>
    @{
        int i = 1;
        foreach (var item in Model)
        {
    <tr>
        <td class="center">
            <label class="position-relative">
                @i
            </label>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FatherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlaceOfBirth)
        </td>
        <td>
            @item.BirthDate.MiladiToPersion()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IDNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NationalCode)
        </td>
        <td>
            @item.DateOfEmployement.MiladiToPersion()
        </td>

        <td>
            <div class="hidden-sm hidden-xs btn-group">
                <button data-original-title="ویرایش" data-placement="top" data-toggle="tooltip" data-Id="@item.EmployemeId" class="BtnEdit btn btn-xs btn-warning tooltip1">
                    <i class="ace-icon fa fa-pencil bigger-140"></i>
                </button>

                <button data-original-title="حذف" data-placement="top" data-toggle="tooltip" data-Id="@item.EmployemeId" data-DeleteName="DeleteDataEmployeme()" class="BtnDelete btn btn-xs btn-danger tooltip1">
                    <i class="ace-icon fa fa-trash-o bigger-140"></i>
                </button>
                <button data-original-title="تحصیلات" data-placement="top" data-toggle="tooltip" data-Id="@item.EmployemeId" data-EmployemeName="@item.FirstName&nbsp;@item.LastName" class="BtnEducationEmployeme btn btn-xs btn-info tooltip1">
                    <i class="ace-icon fa fa-graduation-cap bigger-140"></i>
                </button>
                <button data-original-title="مشخصات شغل" data-placement="top" data-toggle="tooltip" data-Id="@item.EmployemeId" data-EmployemeName="@item.FirstName&nbsp;@item.LastName" class="BtnEmployemeJob btn btn-xs btn-success tooltip1">
                    <i class="ace-icon fa fa-tasks bigger-140"></i>
                </button>
                <button data-original-title="سوابق آموزشهای طی شده" data-placement="top" data-toggle="tooltip" data-Id="@item.EmployemeId" data-EmployemeName="@item.FirstName&nbsp;@item.LastName" class="BtnEmployeeTrainingPassed btn btn-xs btn-pink tooltip1">
                    <i class="ace-icon fa fa-certificate bigger-140"></i>
                </button>
                <button data-original-title="بارگذاری فایل استعلام" data-placement="top" data-toggle="tooltip" data-EmployemeId="@item.EmployemeId" data-EmployemeName="@item.FirstName&nbsp;@item.LastName" class="BtnUploadFileInquiry btn btn-xs btn-grey tooltip1">
                    <i class="ace-icon fa fa-upload bigger-140"></i>
                </button>
                @*<button data-original-title="برگه شناسنامه آموزش" data-placement="top" data-toggle="tooltip" data-EmployemeId="@item.EmployemeId" data-EmployemeName="@item.FirstName&nbsp;@item.LastName" class="BtnListEmployeeTrainingPassed btn btn-xs btn-grey tooltip1">
                 <i class="ace-icon fa fa-upload bigger-140"></i>
                </button>*@
                <a href="/EmployeeTrainingPassedReport/Index/@item.EmployemeId" data-original-title="برگه شناسنامه آموزش" data-placement="top" data-toggle="tooltip" class="BtnListEmployeeTrainingPassed btn btn-xs btn-info tooltip1">
                    <i class="ace-icon fa fa-list bigger-120"></i>
                </a>

                <button data-original-title="تنظیم تاریخ" data-placement="top" data-toggle="tooltip"
                        data-Id="@item.EmployemeId"
                        data-EmployemeId="@item.EmployemeId"
                        data-EmployemeName="@item.EmployemeName"
                        class="BtnSetDateReport btn btn-xs btn-round tooltip1">
                    <i class="ace-icon fa fa-list bigger-100"></i>
                </button>

                <a href="/Employeme/Print/@item.EmployemeId" data-original-title="پرینت برگه شناسنامه آموزش" data-placement="top" data-toggle="tooltip" data-Id="@item.EmployemeId" class="btn btn-xs btn-info2 tooltip1">
                    <i class="ace-icon fa fa-print bigger-140"></i>
                </a>
            </div>

            <div class="hidden-md hidden-lg">
                <div class="inline position-relative">
                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                    </button>

                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                        <li>
                            <a data-Id="@item.EmployemeId" class="BtnEdit tooltip-success" data-rel="tooltip" title="ویرایش">
                                <span class="green">
                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                </span>
                            </a>
                        </li>

                        <li>
                            <a data-Id="@item.EmployemeId" class="BtnDelete tooltip-error" data-rel="tooltip" title="حدف">
                                <span class="red">
                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </td>
    </tr>
            i++;
        }
    }
</table>

<script>
    //$('table').dataTable({ searching: false, paging: false, info: false });
    $(document).ready(function () {
        var d = new Date();
        var date = d.getDate();
        $('table').DataTable({
            dom: 'Blfrtip',
            info: false,
            stateSave: true,
            lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
            //oSelectorOpts: { filter: 'applied' },
            columnDefs: [
                { "width": "9%", "orderable": false, "targets": 7 }
            ],
            oLanguage: {
                oPaginate: {
                    "sFirst": "اولین صفحه", // This is the link to the first page
                    "sPrevious": "قبلی", // This is the link to the previous page
                    "sNext": "بعدی", // This is the link to the next page
                    "sLast": "آخرین صفحه" // This is the link to the last page
                },
                sSearch: "جستجو:",
                sLengthMenu: "تعداد داده: _MENU_ "
            },
            buttons: [{
                text: 'ذخیره تمام اطلاعات  در اکسل',
                className: "ExportAll",
                extend: 'excelHtml5',
                title: 'گزارش' + ' ' + $('#PageReportName').text() + '' + d.getFullYear() + '/' + ("0" + (d.getMonth() + 1)).slice(-2) + '/' + ("0" + d.getDate()).slice(-2),
                exportOptions: {
                    modifier: {
                        selected: true
                    },
                    columns: [1, 2, 3, 4, 5, 6, 7],
                    format: {
                        header: function (data, columnIdx) {
                            return data;
                        },
                        body: function (data, column, row) {
                            // Strip $ from salary column to make it numeric
                            debugger;
                            return column === 7 ? "" : data;
                        }
                    }
                },
                footer: false,
                customize: function (xlsx) {
                    var sheet = xlsx.xl.worksheets['sheet1.xml'];
                    //$('c[r=A1] t', sheet).text( 'Custom text' );
                    //$('row c[r^="C"]', sheet).attr('s', '2');
                }
            }
                ,
            {
                text: 'ذخیره همین صفحه در اکسل',
                extend: 'excelHtml5',
                exportOptions: {
                    modifier: {
                        page: 'current'
                    }
                }
            },
            ]
        });
        $('.dt-button').addClass('btn btn-lg btn-primary');
        $('.ExportAll').addClass('btn btn-lg btn-success');
    });
</script>


