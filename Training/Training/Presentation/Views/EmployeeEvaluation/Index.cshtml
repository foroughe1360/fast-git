@model IEnumerable<InterfaceEntity.EmployeeEvaluationEntity>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <script src="~/Content/Date/js/jquery.min.js"></script>
    <script src="~/ControllerJS/EmployeeEvaluationController.js"></script>  

</head>

<body>
    <!-- #section:basics/content.breadcrumbs -->
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>

        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">صفحه اصلی</a>
            </li>
            <li class="active">ارتقاءکارشناسان</li>
            <li class="active">ارزیابی برای ارتقاء کارشناسان مرکز</li>
        </ul>
        <!-- /.breadcrumb -->
    </div>

    <!-- /section:basics/content.breadcrumbs -->
    <div class="page-content">
        <!-- /section:settings.box -->
        <div class="page-content-area">
            <br />
            <div class="col-md-offset-11 col-md-9" style="margin-bottom: 5px">
                <button class="btn btn-success btn-white btn-round" type="button" id="btnAddNew">
                    <i class="ace-icon fa fa-plus bigger-125"></i>
                    جدید
                </button>
            </div>

            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12">

                    <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="center">
                                    <label class="position-relative">
                                        #
                                    </label>
                                </th>
                                <th>کد شناسایی لیست ارزیابی برای ارتقاء کارشناسان مرکز</th>
                                <th>دانش نظری</th>
                                <th>جزئیات نمرات دانش نظری</th>
                                <th>تجربه</th>
                                <th>جزئیات نمرات تجربه</th>
                                <th>مهارت</th>
                                <th>جزئیات نمرات مهارت</th>
                                <th>عملکرد کاری</th>
                                <th>جزئیات نمرات عملکرد</th>
                                <th>مسئولیت پذیری</th>
                                <th>جزئیات نمرات مسئولیت پذیری</th>
                                <th>رفتارهای فردی</th>
                                <th>جزئیات نمرات رفتارهای فردی</th>
                                <th>تائید ارتقاء </th>
                            </tr>
                        </thead>
                        @{
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="center">
                                        <label class="position-relative">
                                            @i
                                        </label>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ListEmployeeEvaluationId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TheoreticalKnowledge)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TheoreticalKnowledgeDetail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Experience)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExperienceDetail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Skill)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SkillDetail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WorkPerformance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WorkPerformanceDetail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Accountability)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AccountabilityDetail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IndividualBehavior)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IndividualBehaviorDetail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpgradeConfirmation)
                                    </td>
                                    <td>
                                        <div class="hidden-sm hidden-xs btn-group">
                                            <button data-Id="@item.ListEmployeeEvaluationId" class="BtnEdit btn btn-xs btn-warning">
                                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                                            </button>

                                            <button data-Id="@item.ListEmployeeEvaluationId" class="BtnDelete btn btn-xs btn-danger">
                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                            </button>
                                        </div>

                                        <div class="hidden-md hidden-lg">
                                            <div class="inline position-relative">
                                                <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                    <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                                </button>

                                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                                                    <li>
                                                        <a data-Id="@item.ListEmployeeEvaluationId" class="BtnEdit tooltip-success" data-rel="tooltip" title="ویرایش">
                                                            <span class="green">
                                                                <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a data-Id="@item.ListEmployeeEvaluationId" class="BtnDelete tooltip-error" data-rel="tooltip" title="حدف">
                                                            <span class="red">
                                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </table>
                </div>
                <!-- /.span -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.page-content-area -->
    </div>
    <!-- /.page-content -->
    <div class="modal fade" id="AddNewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="breadcrumbs">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <ul class="breadcrumb">
                            <li>
                                <i class="ace-icon fa fa-home home-icon"></i>
                                <a href="#">فرم ثبت /ویرایش</a>
                            </li>
                        </ul>

                    </div>
                </div>
                <div class="modal-body" id="MainModalContent">
                    salam susage
                </div>

            </div>
        </div>
    </div>
</body>
</html>


