
@model InterfaceEntity.AccessMenuUserEntity
@{
    List<SelectListItem> listState = new List<SelectListItem>();
    listState.Add(new SelectListItem
    {
        Text = "فعال",
        Value = "True",
        //Selected = true
    });
    listState.Add(new SelectListItem
    {
        Text = "غیرفعال",
        Value = "False"
    });
}
<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
</head>

<body>

    <!-- #section:basics/content.breadcrumbs -->
    <div class="breadcrumbs" style="display:none" id="MessageOperation">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-check"></i>
                <a href="#" id="messageOp"></a>
            </li>
        </ul>
        <!-- /.breadcrumb -->
    </div>

    <!-- /section:basics/content.breadcrumbs -->
    <div class="page-content">
        <!-- /section:settings.box -->
        <div class="page-content-area">
            <br />
            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <form class="form-horizontal" role="form">
                        <!-- #section:elements.form -->

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">کاربر : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("UserId", new MultiSelectList(ViewBag.UserId, "Value", "Text"), "--کاربر را انتخاب نمائید --", new { @id = "UserId", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.UserId)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">منو : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("MenuId", new MultiSelectList(ViewBag.MenuId, "Value", "Text"), "--منو را انتخاب نمائید --", new { @id = "MenuId", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.MenuId)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">نوع دسترسی : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("AccessTypeId", new MultiSelectList(ViewBag.TableInterfaceValueIdAccessType, "Value", "Text"), "--نوع دسترسی را انتخاب نمائید --", new { @id = "AccessTypeId", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.AccessTypeId)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">وضعیت : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("Status", listState, "-- وضعیت دسترسی را انتخاب نمائید --", new { @id = "Status", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.Status)
                            </div>
                        </div>

                        <div class="breadcrumbs" id="breadcrumbs">
                            <div class="col-md-offset-3">
                                <button id="btnSave" onclick="SaveData()" class="btn btn-success btn-white btn-round" type="button">
                                    <i class="ace-icon fa fa-floppy-o bigger-125"></i>
                                    ذخیره
                                </button>
                                &nbsp; &nbsp; &nbsp;
                                <button type="button" class="btn btn-danger btn-white btn-round" data-dismiss="modal" aria-label="Close">
                                    <i class="ace-icon fa fa-undo bigger-125"></i>

                                    بازگشت
                                </button>
                                <img class="col-md-offset-1" style="display:none" id="ajaxloader" src="~/AceTemplate/assets/img/ajax-loader2.gif" />
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.page-content-area -->
    </div>
    <!-- /.page-content -->

</body>

</html>

