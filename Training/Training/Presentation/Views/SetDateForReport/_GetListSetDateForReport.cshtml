@using Bussiness
@model IEnumerable<InterfaceEntity.SetDateForReportEntity>

<table id="sample-table-1" class="table table-striped table-bordered table-hover center">
    <thead>
        <tr>
            <th class="center">
                <label class="position-relative">
                    #
                </label>
            </th>
            <th>تاریخ تهیه کننده</th>
            <th>تاریخ تایید کننده</th>
            <th>تاریخ تصویب کننده</th>
            <th>عنوان گزارش</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody id="contacts">
        @{
            int i = 1;
            foreach (var item in Model)
            {
        <tr>
            <td class="center">
                <label class="position-relative">
                    @i
                </label>
            </td>
            <td>
                @item.DateOfProducer.MiladiToPersion()
            </td>
            <td>
                @item.DateOfApprover.MiladiToPersion()
            </td>
            <td>
                @item.DateOfRegistrar.MiladiToPersion()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportNameTitle)
            </td>

            <td>
                <div class="hidden-sm hidden-xs btn-group">
                    <button class="btnEditSetDateForReport btn btn-xs btn-warning"
                            data-SetDateForReportId="@item.SetDateForReportId"
                            data-PublicCode="@item.PublicCode"
                            data-EmployemeId="@item.EmployemeId"
                            data-ReportNameId="@item.ReportNameId"
                            data-ReportNameTitle="@item.ReportNameTitle"
                            data-DateOfProducerStr="@item.DateOfProducer.MiladiToPersion()"
                            data-DateOfApproverStr="@item.DateOfApprover.MiladiToPersion()"
                            data-DateOfRegistrarStr="@item.DateOfRegistrar.MiladiToPersion()"
                            >
                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                    </button>

                    <button data-SetDateForReportId="@item.SetDateForReportId" class="btnDeleteSetDateForReport btn btn-xs btn-danger">
                        <i class="ace-icon fa fa-trash-o bigger-120"></i>
                    </button>
                </div>

                <div class="hidden-md hidden-lg">
                    <div class="inline position-relative">
                        <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                            <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                        </button>

                        <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                            <li>
                                <a data-Id="@item.SetDateForReportId" class="BtnEdit tooltip-success" data-rel="tooltip" title="ویرایش">
                                    <span class="green">
                                        <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                    </span>
                                </a>
                            </li>

                            <li>
                                <a data-Id="@item.SetDateForReportId" class="BtnDelete tooltip-error" data-rel="tooltip" title="حدف">
                                    <span class="red">
                                        <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </td>
        </tr>
                i++;
            }
        }
    </tbody>
</table>

