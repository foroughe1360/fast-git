
@model InterfaceEntity.NameOfSignatoryEntity

@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "فعال",
        Value = "True",
        //Selected = true
    });
    listItems.Add(new SelectListItem
    {
        Text = "غیرفعال",
        Value = "False"
    });
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <script>
        new AMIB.persianCalendar('NameOfSignatoryDatestr');
    </script>
</head>

<body>

    <!-- #section:basics/content.breadcrumbs -->
    <div class="breadcrumbs" style="display:none" id="MessageOperation">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-check"></i>
                <a href="#" id="messageOp"></a>
            </li>
        </ul>
        <!-- /.breadcrumb -->
    </div>

    <!-- /section:basics/content.breadcrumbs -->
    <div class="page-content">
        <!-- /section:settings.box -->
        <div class="page-content-area">
            <br />

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <form class="form-horizontal" role="form">
                        <!-- #section:elements.form -->

                        <div class="form-group">
                            <label id="lblTableInterfaceId" class="col-sm-3 control-label no-padding-right" for="form-field-1">نام : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.FirstName, new { @id = "FirstName", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "نام" })
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label id="lblTableValue" class="col-sm-3 control-label no-padding-right" for="form-field-1">نام خانوادگی : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.LastName, new { @id = "LastName", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "نام خانوادگی" })
                                @Html.ValidationMessageFor(model => model.LastName)
                            </div>
                        </div>

                        <div class="form-group">
                            <label id="lblTableValue" class="col-sm-3 control-label no-padding-right" for="form-field-1">تاریخ ثیت : </label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.NameOfSignatoryDate, new { @id = "NameOfSignatoryDatestr", @class = "col-xs-10 col-sm-5 col-md-10 fs", @placeholder = "تاریخ ثبت" })
                                @Html.ValidationMessageFor(model => model.NameOfSignatoryDate)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">وضعیت : </label>
                            <div class="col-md-9">
                                @Html.DropDownList("State", listItems, "-- وضعیت را انتخاب نمائید --", new { @id = "State", @class = "col-xs-10 col-sm-5 col-md-10 fs" })
                                @Html.ValidationMessageFor(model => model.State)
                            </div>
                        </div>

                        <div class="breadcrumbs" id="breadcrumbs">
                            <script type="text/javascript">
                                try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
                            </script>

                            <div class="col-md-offset-3">

                                <button id="btnSave" onclick="SaveData()" class="btn btn-success btn-white btn-round" type="button">
                                    <i class="ace-icon fa fa-floppy-o bigger-125"></i>
                                    ذخیره
                                </button>
                                &nbsp; &nbsp; &nbsp;
                                <button type="button" class="btn btn-danger btn-white btn-round" data-dismiss="modal" aria-label="Close">
                                    <i class="ace-icon fa fa-undo bigger-125"></i>

                                    بازگشت
                                </button>
                                <img class="col-md-offset-1" style="display:none" id="ajaxloader" src="~/AceTemplate/assets/img/ajax-loader2.gif" />
                            </div>
                        </div>

                    </form>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.page-content-area -->
    </div>
    <!-- /.page-content -->

</body>

</html>


